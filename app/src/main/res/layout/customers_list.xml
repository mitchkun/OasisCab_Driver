<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <FrameLayout
        android:id="@+id/profile_pic_box"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:background="@drawable/circle"
        android:layout_margin="10dp">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/profile_image"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:src="@drawable/ic_person_black_24dp" />
    </FrameLayout>

    <TextView
        android:id="@+id/customer_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/nav_header_vertical_spacing"
        android:text="@string/driver_name"
        android:textColor="@color/black"
        android:layout_toRightOf="@id/profile_pic_box"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"/>

    <TextView
        android:id="@+id/distance_away"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/nav_header_vertical_spacing"
        android:text="@string/distance_away_string"
        android:textColor="@color/black"
        android:layout_toRightOf="@id/profile_pic_box"
        android:layout_below="@id/customer_name"
        android:layout_marginLeft="10dp"/>

    <TextView
        android:id="@+id/pick_up_location"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/nav_header_vertical_spacing"
        android:text="@string/pick_up_location_string"
        android:textColor="@color/black"
        android:layout_below="@id/profile_pic_box"
        android:layout_marginLeft="10dp"
        android:drawableLeft="@drawable/ic_circular_shape_silhouette"
        android:drawablePadding="10dp"/>

    <TextView
        android:id="@+id/drop_off_location"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/nav_header_vertical_spacing"
        android:text="@string/drop_off_location_string"
        android:textColor="@color/black"
        android:layout_below="@id/pick_up_location"
        android:layout_marginLeft="10dp"
        android:drawableLeft="@drawable/ic_circular_shape_silhouette1"
        android:drawablePadding="10dp"/>

    <TextView
        android:id="@+id/accept_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/button_oasis"
        android:text="@string/accept_string"
        android:textColor="@color/black"
        android:textSize="14sp"
        android:layout_below="@id/drop_off_location"
        android:layout_margin="10dp"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"/>

    <TextView
        android:id="@+id/decline_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/button_decline"
        android:text="@string/decline_string"
        android:textColor="@color/white"
        android:layout_below="@id/drop_off_location"
        android:layout_toRightOf="@id/accept_btn"
        android:layout_margin="10dp"
        android:textSize="14sp"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/black"
        android:layout_below="@id/accept_btn"
        android:layout_margin="5dp"/>

</RelativeLayout>
